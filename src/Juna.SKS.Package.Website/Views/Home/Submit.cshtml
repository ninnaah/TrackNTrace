@model Juna.SKS.Package.Website.Models.ParcelInput

@{
    ViewData["Title"] = "SubmitParcel";
}

<h1>Submit Parcel</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Submit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipientName" class="control-label"></label>
                <input asp-for="RecipientName" class="form-control" />
                <span asp-validation-for="RecipientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipientStreet" class="control-label"></label>
                <input asp-for="RecipientStreet" class="form-control" />
                <span asp-validation-for="RecipientStreet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipientPostalCode" class="control-label"></label>
                <input asp-for="RecipientPostalCode" class="form-control" />
                <span asp-validation-for="RecipientPostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipientCity" class="control-label"></label>
                <input asp-for="RecipientCity" class="form-control" />
                <span asp-validation-for="RecipientCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipientCountry" class="control-label"></label>
                <input asp-for="RecipientCountry" class="form-control" />
                <span asp-validation-for="RecipientCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenderName" class="control-label"></label>
                <input asp-for="SenderName" class="form-control" />
                <span asp-validation-for="SenderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenderStreet" class="control-label"></label>
                <input asp-for="SenderStreet" class="form-control" />
                <span asp-validation-for="SenderStreet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenderPostalCode" class="control-label"></label>
                <input asp-for="SenderPostalCode" class="form-control" />
                <span asp-validation-for="SenderPostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenderCity" class="control-label"></label>
                <input asp-for="SenderCity" class="form-control" />
                <span asp-validation-for="SenderCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenderCountry" class="control-label"></label>
                <input asp-for="SenderCountry" class="form-control" />
                <span asp-validation-for="SenderCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Back to Home Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
